<!-- Settings for EAC Barcelona Client -->
<!-- For float in (0,1) use .X notation -->
<?xml version="1.0" ?>
<settings>
	<!-- Common -->
	<common>
	    <barcelonaDiameter>1.5</barcelonaDiameter>
	    <metersToCoord>160</metersToCoord>
	    <barcelonaBase>0.9</barcelonaBase>
	    <roomWidth>5</roomWidth>
	    <roomDepth>3.8</roomDepth>
	    <blobDistanceThreshold>3</blobDistanceThreshold>
	    <minLightingRadius>0.2</minLightingRadius>
	    <maxLightingRadius>1</maxLightingRadius>
	    <maxBlobs>2</maxBlobs>
        <blobPulseMaxOffset>120</blobPulseMaxOffset>
	</common>
    
    <audioAlpha>
        <scaler>.5</scaler>
        <offset>.5</offset>
<!--        <scaler>0</scaler>-->
<!--        <offset>1</offset>-->
    </audioAlpha>
    
    <audioRadius>
        <scaler>1</scaler>
        <offset>0</offset>
<!--        <scaler>0</scaler>-->
<!--        <offset>1</offset>-->
    </audioRadius>

    <blobPositionFilter>0.1</blobPositionFilter>
    <blobAudioFilter>0.1</blobAudioFilter>

	<!-- Moods -->
	<moods a='1'>
		<mood name="ruido">
			<behaviourComposer>
				<behaviourTime key="pulse" duration="3"></behaviourTime>
<!--				<behaviourTime key="pulse" duration="3"></behaviourTime>-->
<!--				<behaviourTime key="doublePulse" duration="5"></behaviourTime>-->
			</behaviourComposer>
		</mood>
		<mood name="flash">
			<behaviourComposer>
				<behaviourTime key="pulse" duration="3"></behaviourTime>
			</behaviourComposer>
		</mood>
		<mood name="noise">
			<behaviourComposer>
				<behaviourTime key="pulse" duration="3"></behaviourTime>
			</behaviourComposer>
		</mood>
	</moods>
</settings>
